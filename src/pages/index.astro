---
import PokemonCard from "../conponents/pokemones/PokemonCard.astro";
import type { PokemonListResponse } from "../interfaces/pokemon-list-response";
import MainLayout from "../layouts/MainLayout.astro";


const resp = await fetch("https://pokeapi.co/api/v2/pokemon");
const data = await resp.json() as PokemonListResponse;



const title = "PÃ³kemon static | Home"


---

<MainLayout title={ title }>

	<h1 class="text-3xl">Listado de pokemones</h1>
	<hr>
	<section aria-label="Listado de pokemones" class="grid grid-cols-1 sm:grid-cols-3 md:grid-cols-3 gap-4">
{
			data.results.map((pokemon) => (
				<PokemonCard name={pokemon.name} url={pokemon.url} />
			))
		}
	</section>
		
	
	<h1 class="text-3xl ">Astro</h1>
</MainLayout>
