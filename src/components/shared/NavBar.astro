---
const links = [
  {href: '/', texto: 'Listado'},
  {href: '/pokemons/1', texto: 'Paginado'},
  {href: '/favorites', texto: 'Favoritos'},
  {href: '/islands', texto: 'Vikingos'},
]
const currentPath = Astro.url.pathname;

---

<!-- component -->
<nav class="bg-slate-900">
  <div class="container flex items-center justify-center p-6 mx-auto text-gray-600 capitalize dark:text-gray-300">
      
    <!-- {
      links.map(({href, texto}) => (  
      <a href={href} 
      class:list={[
        "text-gray-200 mx-1.5 sm:mx-6", {
          "border-b-2 border-blue-500": currentPath === href
        }
      ]}
      >{texto}</a>
      ))
    } -->
    {
      links.map(({href, texto}) => (  
      <div>
        <a href={href}  
      class="text-gray-200 mx-1 sm:mx-6"
      >{texto}</a>
      {currentPath === href ? (
        <div 
        transition:name="menu-line"
        class="border-b-2 border-blue-500 mx-4"></div>
      ) : (<div 
        
        class="border-b-2 border-transparent mx-4"></div>)}
      </div>

      ))
    }

      

      

      
  </div>
</nav>